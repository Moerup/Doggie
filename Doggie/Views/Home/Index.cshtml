@using Doggie.Models
@model IEnumerable<Doggie.Models.Event>
@{
    ViewBag.Title = "Home Page";
}
<script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
<div class="row">
    <div class="col-md-6">
        @foreach (var events in Model)
        {
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <a data-toggle="collapse" href="#@events.Id">@events.Location</a>
                    </h3>
                </div>
                <div class="text-center">
                    <div class="panel-collapse collapse" id="@events.Id">
                    <p>Forventet tid: @events.EstimatedTimeMinutes min</p>
                        <p>Start tidspunkt: @events.StartingTime.TimeOfDay.ToString("hh\\:mm")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $('#btnLoadTable').click(function(){
            $('#table2').load(@Url.Action(""));
        }
    });
    });

</script>

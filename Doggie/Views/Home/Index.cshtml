@using Doggie.Models
@model IEnumerable<Doggie.Models.Event>
@{
    ViewBag.Title = "Home Page";
}

<div>
    <div class="panel with-nav-tabs panel-default">
        <div class="panel-heading">
            <ul class="nav nav-tabs">
                @foreach (var events in Model.Take(5))
                {
                    <li><a href="#@events.Id" data-toggle="tab">@events.Location</a></li>
                }

                <li class="dropdown">
                    <a href="#" data-toggle="dropdown">Flere Events <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        @foreach (var events in Model.Skip(5))
                        {
                            <li><a href="#@events.Id" data-toggle="tab">@events.Location</a></li>
                        }
                    </ul>
                </li>
            </ul>
        </div>
        <div class="panel-body">
            <div class="tab-content">
                @foreach (var events in Model)
                {
                    <div class="tab-pane fade" id="@events.Id">@events.DogOwnerName</div>
                }
            </div>
        </div>
    </div>
</div>
